<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tomatroid"
    android:versionCode="5"
    android:versionName="1.7.10" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tomatroid.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tomatroid.ThemeList"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.example.tomatroid.StatisicActivity"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.example.tomatroid.DatabaseList"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>

        <receiver android:name="com.example.tomatroid.util.AlarmReceiver" />

        <activity android:name="com.example.tomatroid.SettingsActivity" >
        </activity>
        <activity
            android:name="com.example.tomatroid.WeeklyActivity"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
    </application>

</manifest>